<table cellpadding="0" cellspacing="0" border="1">
  <tr>
<% active_scaffold_config.print_list.columns.each do |column| %>
  <th bgcolor="#cccccc" <%= "width=\"#{column.options[:print_width]}\"" if column.options[:print_width] %>>
    <%= column.label %>
  </th>
<% end %>
  </tr>
<% @records.each do |record| %>
  <tr>
  <% active_scaffold_config.print_list.columns.each do |column| %>
    <td bgcolor="#ffffff" <%= "width=\"#{column.options[:print_width]}\"" if column.options[:print_width] %>>
      <% save_column_inplace_edit = column.inplace_edit %>
      <% column.inplace_edit = false %>
      <%= get_column_value(record, column) %>
      <% column.inplace_edit = save_column_inplace_edit %>
    </td>
  <% end %>
  </tr>
<% end %>
</table>